<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/listaVestigios"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="0dp"
    android:paddingBottom="20dp">


    <ImageView
        android:id="@+id/imageViewCirculoAzul"
        android:layout_width="48dp"
        android:layout_height="51dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:drawable/ic_menu_search" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTipoVestigio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:text="1 - Mancha de sangue"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvInformacaoAdicional"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:text="Mancha de sangue encontrada no local..."
            android:textColor="#000000"
            android:textSize="12sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@android:color/holo_blue_dark"
            />
    </LinearLayout>


</LinearLayout>